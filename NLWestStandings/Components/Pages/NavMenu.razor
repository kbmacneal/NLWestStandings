@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home" IconColor="Color.Inherit">Home</MudNavLink>
    <MudNavGroup Title="Games" Expanded="true">
        <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Outlined.CalendarToday" Match="NavLinkMatch.All" OnClick="@(() => GoToDayGame("yesterday"))">Yesterday's Games</MudNavLink>
        <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Filled.CalendarToday" Match="NavLinkMatch.All" OnClick="@(() => GoToDayGame("today"))">Today's Games</MudNavLink>
        <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.TwoTone.CalendarToday" Match="NavLinkMatch.All" OnClick="@(() => GoToDayGame("tomorrow"))">Tomorrow's Games</MudNavLink>
    </MudNavGroup>
    <MudNavGroup Title="Post Season" Expanded="true">
        <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Filled.SportsBaseball" Match="NavLinkMatch.All" OnClick="@(() => GoToPostSeason())">Postseason Games</MudNavLink>
        <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Filled.List" Match="NavLinkMatch.All" OnClick="@(() => GoToPostSeasonRanks())">Postseason Ranks</MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    private void GoToDayGame(string day)
    {
        NavigationManager.NavigateTo($"/todaycalendar/{day}");
    }

    private void GoToPostSeason()
    {
        NavigationManager.NavigateTo($"/postseason");
    }

    private void GoToPostSeasonRanks()
    {
        NavigationManager.NavigateTo($"/postseasonranks");
    }
}