@inject NavigationManager NavigationManager
@rendermode InteractiveServer
@inject ISnackbar Snackbar


<MudNavMenu>
    <MudNavLink Href="" Icon="@Icons.Material.Filled.Home" IconColor="Color.Inherit">Home</MudNavLink>
    <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Outlined.CalendarToday" OnClick="@(() => GoToDayGame("yesterday"))">Yesterday's Games</MudNavLink>
    <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Filled.CalendarToday" OnClick="@(() => GoToDayGame("today"))">Today's Games</MudNavLink>
    <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.TwoTone.CalendarToday" OnClick="@(() => GoToDayGame("tomorrow"))">Tomorrow's Games</MudNavLink>
    <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Filled.SportsBaseball" OnClick="@(() => GoToPostSeason())">Postseason Games</MudNavLink>
    <MudNavLink IconColor="Color.Inherit" Icon="@Icons.Material.Filled.List" OnClick="@(() => GoToPostSeasonRanks())">Postseason Ranks</MudNavLink>
</MudNavMenu>

@code {
    private void GoToDayGame(string day)
    {
        NavigationManager.NavigateTo($"/todaycalendar/{day}");
    }

    private void GoToPostSeason()
    {
        NavigationManager.NavigateTo($"/postseason");
    }

    private void GoToPostSeasonRanks()
    {
        NavigationManager.NavigateTo($"/postseasonranks");
    }
} 